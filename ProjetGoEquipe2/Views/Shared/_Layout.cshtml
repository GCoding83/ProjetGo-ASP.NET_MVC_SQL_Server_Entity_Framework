<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ProjetGo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="site-title">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/Logo.jpg" style="width:80px;" ; alt="" />
                    </a>
                </p>
            </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" style="margin-top:10px;">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("À Propos", "About", "Home")</li>
                        <li>@Html.ActionLink("Nos Projets", "Index", "Projets")</li>
                        <li>@Html.ActionLink("Faire un Don", "Index", "Dons")</li>

                        @if (Session["Connected"] == null || (bool)Session["Connected"] == false)
                        {
                            <li>@Html.ActionLink("S'Inscrire", "Inscription", "Membres")</li>
                            <li>@Html.ActionLink("Se Connecter", "Identifier", "Membres")</li>
                        }
                        @if (Session["Connected"] != null && (bool)Session["Connected"] == true)
                        {
                            <li>@Html.ActionLink("Page de " + (string)Session["Usager"], "Index", "Membres")</li>
                            <li>@Html.ActionLink("Déconnexion", "Deconnexion", "Membres")</li>
                        }



                    </ul>
                </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:30px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ProjetGo Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
