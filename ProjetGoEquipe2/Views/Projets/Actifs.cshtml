@model IEnumerable<ProjetGoEquipe2.Projet>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Nos Projets</h2>

<br /><hr />


<!-- Partie principale de la page -->
<main role="main" class="container-fluid">
    <div class="row">

        <div class="col-sm-3">
            @{

                Html.RenderAction("Menus", "Design", new { Categorie = "P", Emphase = "PA" });
            }
        </div>

        <div class="col-sm-9">
            <div class="content-section main-section-top main-add">

                <div class="content-section" id="sectionPrincipaleMembre">

                    <h3 class="titre center">
                        Projets Actifs
                    </h3>

                    <img src="~/Content/Images/current_projects.jpg" alt="Projets proposés" class="center-image" width="200" ; />

                    <br /><br />

                    <table class="table">
                        <tr>
                            <th>
                                Titre
                            </th>

                            <th>
                                Description
                            </th>

                            <th>
                                Début
                            </th>

                            <th>
                                Fin estimée
                            </th>

                            <th>
                                Fonds collectés
                            </th>

                            <th></th>
                        </tr>

                        @foreach (var item in Singleton.Instance.db.Projets.Where(projet => projet.statut == "Actif").OrderByDescending(projet => projet.debutReel))
                        {
                            if (item.visibilite == null || item.visibilite == "Public" || item.visibilite == "Membres" && Session["Connected"] != null && (bool)Session["Connected"] == true)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.titre)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.descriptionCourte)
                                    </td>

                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.debutReel))
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.finEstimee))
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalFondsCollectes)$
                                    </td>

                                    <td>
                                        @Html.ActionLink("Plus de détails", "DetailsPublic", new { id = item.idProjet })
                                    </td>

                                </tr>
                            }
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</main>


