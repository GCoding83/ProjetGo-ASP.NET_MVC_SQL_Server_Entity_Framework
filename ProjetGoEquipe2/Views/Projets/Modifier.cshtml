@model ProjetGoEquipe2.Projet

@{
    ViewBag.Title = "Modifier";
}

<h2>Page de @Session["Usager"]</h2>


<main class="form-horizontal">

    <!-- Partie principale de la page -->
    <main role="main" class="container-fluid">
        <div class="row">

            <div class="col-sm-3">

                <div class="content-section" id="right-left">

                    <h4>Mes Sections</h4>

                    <div class="btn-group-vertical" role="group">
                        <button onclick="@("window.location.href='" + @Url.Action("MesProjets", "Projets") + "'");" type="button" class="btn btn-default" style="text-align:left; background-color:rgb(184, 210, 49)">Mes Projets</button>
                        <button onclick="@("window.location.href='" + @Url.Action("Ajouter", "Projets") + "'");" type="button" class="btn btn-default" style="text-align:left">Ajouter Projet</button>
                        <button type="button" class="btn btn-default" style="text-align:left">Mes Comptes-Rendus</button>
                        <button type="button" onclick="@("window.location.href='" + @Url.Action("Cotisation", "Membres") + "'");" class="btn btn-default" style="text-align:left">Payer ma Cotisation</button>
                        <button type="button" class="btn btn-default" style="text-align:left">Mon Profil</button>
                    </div>
                </div>



            </div>

            <div class="col-sm-9">
                <div class="content-section main-section-top">

                    <div class="content-section" id="sectionPrincipaleMembre">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <h3 style="text-align:center;">Modifier @Html.DisplayFor(model => model.titre)</h3>

                        <div style="text-align:center;">
                            @Html.ActionLink("Revenir à mes projets", "MesProjets")
                        </div>
                        <br />

                        <dl class="dl-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idProjet)

                            <div class="form-group">
                                <div class="control-label col-md-2">Titre</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.titre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.titre, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Statut</div>
                                <div class="col-md-10">
                                    <select class="form-control" name="statut" value=@Model.statut>
                                        <option value="Propose">Proposé</option>
                                        <option value="Soumis">Soumis</option>
                                        <option value="Approuve">Approuvé</option>
                                        <option value="Actif">Actif</option>
                                        <option value="Termine">Terminé</option>
                                        <option value="Gele">Gelé</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Courte Description</div>
                                <div class="col-md-10">
                                    <textarea class="form-control col-md-10" rows="5" name="description"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Sommaire</div>
                                <div class="col-md-10">
                                    <textarea class="form-control col-md-10" rows="5" name="sommaire"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Début estimé</div>                                    
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" name="debutEstime" value="@Convert.ToString(string.Format("{0:yyyy-MM-dd}", Model.debutEstime))" />
                                    </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Fin estimée</div>
                                <div class="col-md-10">
                                    <input type="date" class="form-control" name="finEstimee" value="@Convert.ToString(string.Format("{0:yyyy-MM-dd}", Model.finEstimee))" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Début réel</div>
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" name="debutReel" value="@Convert.ToString(string.Format("{0:yyyy-MM-dd}", Model.debutReel))" />
                                    </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Fin réelle</div>
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" name="finReelle" value="@Convert.ToString(string.Format("{0:yyyy-MM-dd}", Model.finReelle))" />
                                    </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Budget ($ seulement)</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.budget, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.budget, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Fonds collectés ($ seulement)</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.totalFondsCollectes, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.totalFondsCollectes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Total dépenses ($ seulement)</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.totalDepenes, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.totalDepenes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">État d'avancement</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.etatAvancement, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.etatAvancement, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Fréquence des comptes-rendus</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.frequenceComptesRendus, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.frequenceComptesRendus, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">Date prochain compte-rendu</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.dateProchainCompteRendu, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dateProchainCompteRendu, "", new { @class = "text-danger" })
                                </div>
                            </div>




                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Modifier" class="btn btn-default" style="background-color:rgb(184, 210, 49)"/>
                                </div>
                            </div>
                        </dl>
                    }
                        </div>

                </div>
            </div>
        </div>
    </main>
    </main>

