
@{
    ViewBag.Title = "Index";
}

<h2>Page de @Session["Usager"]</h2>

<!-- Partie principale de la page -->
<main role="main" class="container-fluid">
    <div class="row">

        <div class="col-sm-3">

            <div class="content-section" id="right-left">
                <h4>Mes Sections</h4>

                <div class="btn-group-vertical" role="group">
                    <button type="button" class="btn btn-default" style="text-align:left">Mes Projets</button>
                    <button onclick="afficherFormulaireAjoutProjet()" type="button" class="btn btn-default" style="text-align:left">Ajouter Projet</button>
                    <button type="button" class="btn btn-default" style="text-align:left">Mes Comptes-Rendus</button>
                    <button type="button" class="btn btn-default" style="text-align:left">Payer ma Cotisation</button>
                    <button type="button" class="btn btn-default" style="text-align:left">Mon Profil</button>
                </div>
            </div>

            <script>
                function afficherFormulaireAjoutProjet() {
                    cacherSectionsMembres();
                    alert("Je vais afficher");
                    document.getElementById("ajoutProjet").style.display = "block";
                    
                }

                function cacherSectionsMembres() {
                    let sections = document.getElementsByClassName("sectionsMembre");
                    for (let i = 0; i < sections.length; i++) {
                        alert("Je vais cacher");
                        sections[i].style.display = "none";
                    }
                }
            </script>


        </div>

        <div class="col-sm-9">
            <div class="content-section main-section-top">

                <div class="content-section" id="sectionPrincipaleMembre">

                    <section class="sectionsMembre" id="ajoutProjet" style="display:none">

                        Ceci est la section pour ajouter des projets.

                    </section>
                </div>

            </div>
        </div>
    </div>
</main>